<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" >

            <ImageView
                android:id="@+id/imageViewTopLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onPossitionClicked" />

            <FrameLayout
                android:id="@+id/FrameLayout1"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/white" >
            </FrameLayout>

            <ImageView
                android:id="@+id/imageViewTopCenter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onPossitionClicked" />

            <FrameLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/white" >
            </FrameLayout>

            <ImageView
                android:id="@+id/imageViewTopRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="onPossitionClicked" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/white" >
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3" >

            <ImageView
                android:id="@+id/imageViewCenterLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:onClick="onPossitionClicked" />

            <FrameLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/white" >
            </FrameLayout>

            <ImageView
                android:id="@+id/imageViewCenterCenter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:onClick="onPossitionClicked" />

            <FrameLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/white" >
            </FrameLayout>

            <ImageView
                android:id="@+id/imageViewCenterRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:onClick="onPossitionClicked" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:background="@color/white" >
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3" >

            <ImageView
                android:id="@+id/imageViewBottomLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:onClick="onPossitionClicked" />

            <FrameLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/white" >
            </FrameLayout>

            <ImageView
                android:id="@+id/imageViewBottomCenter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:onClick="onPossitionClicked" />

            <FrameLayout
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/white" >
            </FrameLayout>

            <ImageView
                android:id="@+id/imageViewBottomRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.32"
                android:onClick="onPossitionClicked" />
        </LinearLayout>

        <TableRow
            android:id="@+id/tableRowPlayerRowOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center_vertical" >

            <TextView
                android:text="Player: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textViewPlayerOne"
                android:text="PLAYER 1 "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/imageViewPlayerOneIcon"
                android:src="@drawable/circle" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRowPlayerRowTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:gravity="center_vertical" >

            <TextView
                android:text="Player: "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textViewPlayerTwo"
                android:text="PLAYER 2 "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:id="@+id/imageViewPlayerTwoIcon"
                android:src="@drawable/circle" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical" >

            <Button
                android:id="@+id/buttonOK"
                android:text="OK" >
            </Button>
        </TableRow>
    </TableLayout>

</LinearLayout>